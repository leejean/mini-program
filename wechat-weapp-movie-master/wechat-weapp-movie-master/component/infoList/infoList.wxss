@import "../../comm/style/animation.wxss";
.info {
    box-sizing: border-box;
    width: 750rpx;
    padding: 10rpx 15rpx;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: space-between;
    box-shadow: 0 0 40rpx #f4f4f4 inset;
}
.info-item {
    width: 750rpx;
    height: 200rpx;
    margin-bottom: 10rpx;
    border-radius: 10rpx;
    background-color: #fff;
    border: 1px solid #e4e4e4;
    box-shadow: 0 20rpx 40rpx #eee;
    overflow: hidden;
    animation: fadeIn 1s;
    display: flex;
    justify-content: flex-start;
}
.info-cover-img {
    width: 190rpx;
    height: 190rpx;
    margin: 5rpx 0 0 15rpx;
    border-radius: 5rpx;
}
.info-detail>view{
    width:500rpx;
    white-space:nowrap;
    text-overflow:ellipsis;
    overflow:hidden;
    word-spacing:8px; letter-spacing: 1px;
}
.info-detail>.title{
	padding:16rpx 0 0 12rpx;
	height:65rpx;
	font-size:36rpx;
	font-weight:bold;
}

.info-detail>.desc{
	height:50rpx;
	font-size:24rpx;
	padding:2rpx 0 0 12rpx;
}
.info-detail>.loaction{
	height:50rpx;
	color:#8D8D8D;
	font-size:24rpx;
	padding:10rpx 0 0 12rpx;
}
.loading-tip {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #ccc;
}